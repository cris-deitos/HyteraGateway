{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=easyvol;User=root;Password=;"
  },
  "HyteraGateway": {
    "Radio": {
      "InterfaceName": "USB NCM",
      "IpAddress": "192.168.1.1",
      "ControlPort": 50000,
      "AudioPort": 50001,
      "TimeoutSeconds": 30,
      "AutoReconnect": true,
      "ReconnectIntervalSeconds": 10
    },
    "Database": {
      "Host": "localhost",
      "Port": 3306,
      "Database": "easyvol",
      "Username": "root",
      "Password": "",
      "TimeoutSeconds": 30,
      "UsePooling": true,
      "MinPoolSize": 5,
      "MaxPoolSize": 50
    },
    "Ftp": {
      "Host": "localhost",
      "Port": 21,
      "Username": "anonymous",
      "Password": "",
      "RemoteDirectory": "/audio",
      "PassiveMode": true,
      "UseSsl": false
    },
    "Audio": {
      "EnableRecording": true,
      "RecordingDirectory": "recordings",
      "FileFormat": "wav",
      "SampleRate": 8000,
      "BitsPerSample": 16,
      "Channels": 1,
      "EnableStreaming": true,
      "StreamingCodec": "opus",
      "RetentionDays": 30
    },
    "Api": {
      "Port": 5000,
      "UseHttps": false,
      "EnableSwagger": true,
      "EnableCors": true,
      "AllowedOrigins": [],
      "EnableAuth": false,
      "ApiKey": null,
      "EnableWebSocket": true,
      "WebSocketPath": "/hubs/radio-events"
    },
    "RadioMonitoring": {
      "ActivityCheckEnabled": true,
      "ActivityCheckIntervalMinutes": 60,
      "PositionCheckEnabled": true,
      "PositionCheckIntervalMinutes": 30
    },
    "RadioServer": {
      "Enabled": true,
      "Port": 8000,
      "MaxClients": 10
    },
    "PttTimeout": {
      "TimeoutSeconds": 180
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "HyteraGateway": "Debug"
    }
  },
  "AllowedHosts": "*"
}
