<Application x:Class="HyteraGateway.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:HyteraGateway.UI.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Orange" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:NullToBoolConverter x:Key="NullToBool"/>
            <converters:BoolToOnlineStatusConverter x:Key="BoolToOnlineStatus"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:BoolToConnectTextConverter x:Key="BoolToConnectTextConverter"/>
            <converters:BoolToPttColorConverter x:Key="BoolToPttColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
