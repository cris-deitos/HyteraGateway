<UserControl x:Class="HyteraGateway.UI.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <materialDesign:Card Grid.Row="0" Padding="8" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Statistics" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              VerticalAlignment="Center" Margin="8,0"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding StartDate}" 
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Width="120"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" 
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Width="120"/>
                    </StackPanel>

                    <Button Grid.Column="4" 
                           Command="{Binding RefreshStatisticsCommand}"
                           ToolTip="Refresh Statistics"
                           Style="{StaticResource MaterialDesignIconButton}"
                           Margin="8,0">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>

                    <Button Grid.Column="5" 
                           Command="{Binding ExportToExcelCommand}"
                           ToolTip="Export to Excel"
                           Style="{StaticResource MaterialDesignIconButton}"
                           Margin="4,0">
                        <materialDesign:PackIcon Kind="FileExcel"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Summary Cards -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="3" Margin="0,0,0,16">
                <materialDesign:Card Margin="0,0,8,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Phone" Width="32" Height="32" 
                                                    Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Total Calls" Margin="8,0,0,0" VerticalAlignment="Center"
                                      Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalCalls}" 
                                  HorizontalAlignment="Center" 
                                  FontWeight="Bold" 
                                  FontSize="32" 
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Margin="4,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Clock" Width="32" Height="32" 
                                                    Foreground="#4CAF50" VerticalAlignment="Center"/>
                            <TextBlock Text="Total Duration" Margin="8,0,0,0" VerticalAlignment="Center"
                                      Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalDuration}" 
                                  HorizontalAlignment="Center" 
                                  FontWeight="Bold" 
                                  FontSize="32" 
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Margin="8,0,0,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Radio" Width="32" Height="32" 
                                                    Foreground="#FF9800" VerticalAlignment="Center"/>
                            <TextBlock Text="Active Radios" Margin="8,0,0,0" VerticalAlignment="Center"
                                      Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ActiveRadios}" 
                                  HorizontalAlignment="Center" 
                                  FontWeight="Bold" 
                                  FontSize="32" 
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </UniformGrid>

            <!-- Charts Row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Calls Per Day Chart -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Calls Per Day" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                  Margin="0,0,0,16"/>
                        <lvc:CartesianChart Series="{Binding CallsPerDaySeries}" 
                                           Height="300"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Call Type Pie Chart -->
                <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Call Types" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                  Margin="0,0,0,16"/>
                        <lvc:PieChart Series="{Binding CallTypePieSeries}" 
                                     Height="300"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Loading Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="4" 
                 Background="#80000000" 
                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            IsIndeterminate="True"
                            Width="48" Height="48"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
