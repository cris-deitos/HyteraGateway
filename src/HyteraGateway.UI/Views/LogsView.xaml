<UserControl x:Class="HyteraGateway.UI.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <materialDesign:Card Grid.Row="0" Margin="16,16,16,8" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <!-- Search -->
                    <TextBox Width="250" Margin="0,0,16,0"
                             materialDesign:HintAssist.Hint="Search logs..."
                             Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Level Filters -->
                    <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" Margin="0,0,8,0"/>
                    <CheckBox Content="Warning" IsChecked="{Binding ShowWarning}" Margin="0,0,8,0"/>
                    <CheckBox Content="Error" IsChecked="{Binding ShowError}" Margin="0,0,16,0"/>
                    
                    <!-- Auto-scroll -->
                    <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Command="{Binding ExportLogsCommand}" Margin="0,0,8,0"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Export" Margin="0,0,8,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ClearLogsCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        
        <!-- Log List -->
        <materialDesign:Card Grid.Row="1" Margin="16,8,16,8">
            <ListView ItemsSource="{Binding FilteredLogs}" 
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="8,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                       Opacity="0.6" FontFamily="Consolas"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding Level}" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                <Setter Property="Foreground" Value="Orange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Info">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <TextBlock Grid.Column="2" Text="{Binding Message}" 
                                       TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                                       FontFamily="Consolas"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </materialDesign:Card>
        
        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="2" Margin="16,8,16,16" Padding="16">
            <TextBlock>
                <Run Text="Total entries: "/>
                <Run Text="{Binding Logs.Count, Mode=OneWay}"/>
                <Run Text=" | Filtered: "/>
                <Run Text="{Binding FilteredLogs.Count, Mode=OneWay}"/>
            </TextBlock>
        </materialDesign:Card>
    </Grid>
</UserControl>
